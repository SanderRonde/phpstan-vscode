{
	"name": "phpstan-vscode",
	"displayName": "phpstan",
	"description": "Inline PHPStan support for VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": []
	},
	"watch": {
		"generate-package": {
			"patterns": [
				"src/commands"
			],
			"extensions": "ts"
		}
	},
	"scripts": {
		"prepack": "yarn generate-package && yarn prettier --check src/ && yarn lint && yarn compile && tsc -p ./scripts && yarn run build",
		"vscode:prepublish": "yarn run prepack",
		"compile": "tsc -p ./src",
		"build:main": "esbuild --minify --bundle --outfile=out/extension.js src/extension.ts --platform=node --external:vscode",
		"build:debug:main": "esbuild --bundle --outfile=out/extension.js src/extension.ts --platform=node --external:vscode --define:process.env.DEV_OVERRIDE=true",
		"build": "rimraf ./out && yarn run build:main",
		"build:debug": "rimraf ./out && yarn run build:debug:main",
		"lint": "eslint src --ext ts",
		"format-staged": "(git diff --ignore-submodules --quiet && yarn format) || pretty-quick src/",
		"format": "prettier --write src/",
		"package": "yarn run prepack && yarn vsce package",
		"package-dev": "yarn prepush && yarn run build:debug && yarn vsce package",
		"generate-package": "generate-package-json generate --input src/commands/defs.ts -w -p package.json --handler src/commands/commands.ts --validate --prefix Gerrit && prettier --write package.json",
		"prepush": "yarn generate-package && yarn format-staged && yarn lint --fix && yarn compile && tsc -p ./scripts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"vscode-generate-package-json": "^1.0.1"
	}
}
